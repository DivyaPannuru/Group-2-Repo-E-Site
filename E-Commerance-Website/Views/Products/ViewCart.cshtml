@model IEnumerable<E_Commerance_Website.Product>
@{
    Layout = "_Layout";
}
<div>
    <h4>OrderDetails</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
               @*  <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th> *@
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    @* <td>
                        @Html.DisplayFor(modelItem => item.Product.CategoryId)
                    </td> *@
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.Image)" width="100px;" height="100px" alt="None" class="img-thumbnail" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn-lg" asp-controller="Products" asp-action="Submit">Order Now</a> 
</div>
